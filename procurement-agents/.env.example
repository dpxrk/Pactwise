# Application Environment
ENVIRONMENT=development

# Database Configuration
DB_USER=procurement
DB_PASSWORD=procurement123
DATABASE_URL=postgresql://procurement:procurement123@localhost:5432/procurement

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/

# SAP Configuration
SAP_ASHOST=your-sap-server.company.com
SAP_SYSNR=00
SAP_CLIENT=100
SAP_USER=your-sap-username
SAP_PASSWORD=your-sap-password
SAP_LANG=EN

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=admin123
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =====================================================
# LLM Configuration (Claude API for Contract Analysis)
# =====================================================
LLM_PROVIDER=anthropic  # anthropic, openai, azure, ollama
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_API_KEY=sk-ant-api03-your-api-key-here
LLM_API_BASE_URL=https://api.anthropic.com/v1
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=60  # Request timeout in seconds

# Contract Analysis Specific Settings
CONTRACT_ANALYSIS_MODEL=claude-3-5-sonnet-20241022
CONTRACT_EXTRACTION_MODEL=claude-3-5-sonnet-20241022
CONTRACT_MIN_CONFIDENCE=0.85  # Minimum confidence for auto-approval
CONTRACT_ENABLE_CACHING=true  # Enable prompt caching to reduce costs
CONTRACT_MAX_PAGES=100  # Maximum pages per contract to process

# Alternative: OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative: Anthropic (legacy format)
ANTHROPIC_API_KEY=your-anthropic-api-key
AI_MODEL=gpt-4  # or claude-3

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=procurement-system@company.com

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
PROMETHEUS_PORT=9090
FLOWER_PORT=5555

# Admin Tools Configuration
PGADMIN_EMAIL=admin@procurement.com
PGADMIN_PASSWORD=admin123

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_COOKIES=false  # Set to true in production
CSRF_PROTECTION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/procurement/app.log

# Agent Specific Configuration
SOURCING_AGENT_ENABLED=true
SOURCING_AGENT_WORKERS=2
SOURCING_WEB_SCRAPING_TIMEOUT=30

PO_AGENT_ENABLED=true
PO_AGENT_WORKERS=2
PO_APPROVAL_TIMEOUT_HOURS=48

VENDOR_AGENT_ENABLED=true
VENDOR_AGENT_WORKERS=1
VENDOR_REVIEW_CYCLE_DAYS=90

INVOICE_AGENT_ENABLED=true
INVOICE_AGENT_WORKERS=2
INVOICE_TOLERANCE_PERCENT=5

# External Service URLs
ALIBABA_API_URL=https://api.alibaba.com
THOMASNET_API_URL=https://api.thomasnet.com
CREDIT_CHECK_API_URL=https://api.creditcheck.com
COMPLIANCE_DB_URL=https://api.compliance.com

# Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_AUTO_APPROVAL=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_BLOCKCHAIN_CONTRACTS=false

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=60
CACHE_TTL_SECONDS=3600
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Webhook Configuration
WEBHOOK_RETRY_COUNT=3
WEBHOOK_TIMEOUT_SECONDS=30

# File Storage Configuration
UPLOAD_DIR=/var/lib/procurement/uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg

# =====================================================
# Document Processing (OCR for Contracts)
# =====================================================
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng  # eng, spa, fra, deu, etc.
OCR_DPI=300

# =====================================================
# E-Signature Integration (DocuSign)
# =====================================================
DOCUSIGN_ENABLED=false
DOCUSIGN_INTEGRATION_KEY=your-integration-key-here
DOCUSIGN_USER_ID=your-user-id-here
DOCUSIGN_ACCOUNT_ID=your-account-id-here
DOCUSIGN_BASE_URL=https://demo.docusign.net  # or https://na3.docusign.net for production
DOCUSIGN_OAUTH_BASE_URL=https://account-d.docusign.com
DOCUSIGN_PRIVATE_KEY_PATH=/path/to/private.key
DOCUSIGN_WEBHOOK_SECRET=your-webhook-secret

# =====================================================
# CLM Integration (Ironclad, Agiloft, etc.)
# =====================================================
CLM_PROVIDER=none  # ironclad, agiloft, concord, none
CLM_API_KEY=your-clm-api-key-here
CLM_API_BASE_URL=https://api.ironcladapp.com
CLM_WEBHOOK_SECRET=your-webhook-secret

# =====================================================
# Vector Database (for Contract Semantic Search)
# =====================================================
VECTOR_DIMENSIONS=1536  # Claude embedding dimension
VECTOR_SIMILARITY_THRESHOLD=0.7

# =====================================================
# SSO / SAML Configuration (Enterprise Auth)
# =====================================================
SAML_ENABLED=false
SAML_SP_ENTITY_ID=https://your-domain.com/saml/metadata
SAML_IDP_ENTITY_ID=https://idp.example.com/metadata
SAML_IDP_SSO_URL=https://idp.example.com/sso
SAML_IDP_SLO_URL=https://idp.example.com/slo
SAML_X509_CERT=path/to/idp/cert.pem

# OIDC Configuration (Google, Microsoft, etc.)
OIDC_ENABLED=false
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_DISCOVERY_URL=https://accounts.google.com/.well-known/openid-configuration

# =====================================================
# Slack Integration
# =====================================================
SLACK_ENABLED=false
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_DEFAULT_CHANNEL=#procurement-alerts

# =====================================================
# Microsoft Teams Integration
# =====================================================
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# =====================================================
# Salesforce Integration
# =====================================================
SALESFORCE_ENABLED=false
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-security-token
SALESFORCE_DOMAIN=login  # or test for sandbox

# =====================================================
# Sentry (Error Tracking)
# =====================================================
SENTRY_ENABLED=false
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =====================================================
# Data Encryption & Compliance
# =====================================================
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded
DATA_REGION=us  # us, eu, ap, etc.
GDPR_MODE=false
HIPAA_MODE=false
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/procurement

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=100