{
  "name": "pactwise-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "admin",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:admin": "npm run dev --workspace=admin",
    "dev:backend": "npm run start --workspace=backend",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:admin\" \"npm run dev:backend\"",
    "build:frontend": "npm run build --workspace=frontend",
    "build:admin": "npm run build --workspace=admin",
    "build:all": "npm run build:frontend && npm run build:admin",
    "test:all": "npm run test --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "type-check:all": "npm run type-check --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}