# ===== CORE SUPABASE CONFIGURATION =====
# Get these from https://supabase.com/dashboard → Project Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===== AI & ANALYSIS =====
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_org_id_here
OPENAI_MODEL=gpt-4o

# ===== PAYMENT PROCESSING =====
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_BASIC=price_your_basic_plan_price_id
STRIPE_PRICE_ID_PRO=price_your_pro_plan_price_id
STRIPE_PRICE_ID_ENTERPRISE=price_your_enterprise_plan_price_id

# ===== EMAIL SERVICES =====
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# ===== REDIS CACHING =====
# Local: redis://localhost:6379
# Upstash: rediss://username:password@hostname:port
# AWS ElastiCache: rediss://your-cache-cluster.cache.amazonaws.com:6380
REDIS_URL=redis://localhost:6379

# ===== SECURITY & MONITORING =====
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=your_super_secret_webhook_key_here
JWT_SECRET=your_jwt_secret_for_additional_auth
ENCRYPTION_KEY=your_32_character_encryption_key!!

# ===== SLACK NOTIFICATIONS (OPTIONAL) =====
# Get from https://api.slack.com/apps → Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#pactwise-alerts
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===== STORAGE & FILES (OPTIONAL) =====
# If using AWS S3 for additional storage beyond Supabase Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-pactwise-bucket

# ===== ANALYTICS & TRACKING (OPTIONAL) =====
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ===== THIRD-PARTY INTEGRATIONS (OPTIONAL) =====
# Note: E-signatures handled via custom frontend implementation

# HubSpot CRM integration
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_PORTAL_ID=your_hubspot_portal_id

# Salesforce integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=https://yourdomain.com/auth/salesforce/callback

# ===== RATE LIMITING =====
RATE_LIMIT_REDIS_URL=redis://localhost:6379
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===== DEVELOPMENT CONFIGURATION =====
NODE_ENV=development
LOG_LEVEL=debug
DEBUG_MODE=true

# ===== PRODUCTION ONLY =====
# Uncomment and configure for production deployment
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG_MODE=false
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key